.big{
  position: fixed;
  height: 1600rpx;
  background-color: white;
}
/* 个人信息 —— 头像 */
.messageIcon {
  position: relative;
  width: 750rpx;
  /* margin-left: 4%; */
  height: 140rpx;
  border-bottom: 1rpx #e6e6e6 solid;
}

.userinfo-avatar {
  position: absolute;
  width: 106rpx;
  height: 106rpx;
  margin: 10rpx;
  /* margin-left: 210rpx;
  margin-top: 20rpx; */
  right: 7.5%;
  top: 6%;
  border-radius: 50%;
}




.messageName {
  font-size: 30rpx;
  line-height: 140rpx;
  height: 140rpx;
  float: left;
  margin-left: 4%;
  color: #333333
}

.rightImg {
  position: absolute;
  right: 3.5%;
  top: 37%;
}


.rightImg image {
  width: 22rpx;
  height: 40rpx;
}

/* 个人信息 —— 内容 */
.messageModule {
  position: relative;
  width: 750rpx;
  /* margin-left: 4%; */
  padding-left: 4%;
  height: 100rpx;
  border-bottom: 1rpx #e6e6e6 solid;
  line-height: 100rpx;
  color: #646464;
  font-size: 30rpx;
  background-color: white;
}


.userinfo-nickname{
  font-size: 30rpx;
  color: #333333;
}
.text10{
  position: absolute;
  right: 13%;
}
.gender{
  position: absolute;
  right:13%;
}
.messageTitle {
  float: left;
  width: 30%;
}

.messageContent {
  float: left;
  width: 50%;
}

.messageRight {
  float: right;
  /* line-height: 110rpx; */
}
.messageRight image {
  position: absolute;
  width: 22rpx;
  height: 40rpx;
  top: 33rpx;
  right: 64rpx;
}


.messageTextColor {
  color: #bfbfbf;
}
 /* 原始样式 */
 .bottomLine {
  border-bottom: 1rpx #e6e6e6 solid;
}

.clear {
  clear: both;
}

.moduleContainer {
  width: 750rpx;
  border-bottom: 1rpx #e6e6e6 solid;
  padding-bottom: 20rpx;
}

.borderRight {
  border-right: 1px #efefef solid;
}

.inputLine {
  width: 90%;
  margin: 20rpx auto;
  border-bottom: 1px #cccccc solid; 
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.mask{
  width:750rpx;
  height:100%;
  position:fixed;
  background-color:#353535;
  z-index:9998;
  top:0;
  left:0;
  opacity:0.5;
}

/* 底部按钮 */
.bottomButton {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  color: #fff;
  background-color: #ff6600;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  bottom: 0;
}

.bottomButtonGrey {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  color: #fff;
  background-color: #999999;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  bottom: 0;
}

.noMessage {
  font-size: 26rpx;
  width: 100%;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  color: #353535;
}

















