/* 信息标题 */
.messageTitle {
  position: fixed;
  top: 500rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f4f5f7;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color: #333333;

}

/* 信息输入区域 */
.bottom{
  width: 750rpx;
  height: 1200rpx;
  position: fixed;
  top: 580rpx;
  background-color: white;
}
.inputMessageModule {
  width: 92%;
  padding: 0 4%;
  border-bottom: 1px #f3f3f3 solid;
  height: 100rpx;
}

.messageName {
  background-color: white;
  width: 30%;
  text-align: left;
  float: left;
  color: #353535;
  font-size: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
}
.messageContent input{
  background-color: white;
  width: 70%;
  text-align: left;
  float: left;
  color: #666666;
  font-size: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
}

