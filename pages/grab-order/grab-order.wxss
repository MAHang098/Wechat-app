/* 个人中心 */
.customer-list {
    /* padding-top: 94rpx; */
    padding-top: 110rpx;
    width: 100%;
    overflow: hidden;
}
.customer {
    width: 100%;
    height: 148rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 4px 0px rgba(228,228,228,0.73);
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    margin-top: 20rpx;
}
.order {
    margin-top: 30rpx;
}
.customer-right {
    line-height: 148rpx;
}
.customer-right image {
    width: 24rpx;
    height: 34rpx;
}
.customer-left {
    box-sizing: border-box;
    padding: 15rpx 0;
    color: #333333;
    font-size: 30rpx;
    line-height: 60rpx;
}
.customer-left text {
    display: block;
}