/* pages/grab-sheet/grab-sheet.wxss */
.history-order {
    background: #F9F9F9;
    min-height: 1200rpx;
    font-family:PingFang SC;
    font-weight:500;
}


.order-list {
    width: 100%;
    overflow: hidden;
}
.order {
    width: 100%;
    height: 148rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 4px 0px rgba(228,228,228,0.73);
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    margin-bottom: 20rpx;
}

.order-right {
    line-height: 148rpx;
    color: #EC9300;
}
.order-left {
    box-sizing: border-box;
    padding: 15rpx 0;
    color: #333333;
    font-size: 30rpx;
    line-height: 60rpx;
}
.order-left text {
    display: block;
}
.sheetOrder {
  display: block;
  width: 152rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: #EC9300;
  border-radius: 29rpx;
  color: #fff;
  text-align: center;
  margin-top: 30%;
}

.modal-dialog {
    width: 563rpx;
    height: 438rpx;
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    position: fixed;
    z-index: 12;
    top: 25%;
    left: 94rpx;
}
.modal-dialog text {
    height:208rpx;
    line-height: 208rpx;
    font-size:40rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    margin: 0 auto;
    display: block;
    text-align: center;
}
.btn {
    width:418rpx;
    height:80rpx;
    line-height: 70rpx;
    border:2px solid rgba(236,147,0,1);
    border-radius:40rpx;
    color: #EC9300;
    margin-bottom: 30rpx;
}
.isOK {
    background:rgba(236,147,0,1);
    color: #fff;
    border: none;
}
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    z-index: 11;
}