  margin-bottom: 60rpx;
}
/* 页面标题 */
.idCradTitle {
  width: 100%;
  height: 120rpx;
  color: #666666;
  font-size: 30rpx;
  text-align: center;
  line-height: 120rpx;
}

/* 图片上传区域 */
.uploadImgModule {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.uploadImgModule image {
  /* width: 70%; */
  width: 493rpx;
  height: 305rpx;
}

/* 信息标题 */
.messageTitle {
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #353535;
  text-align: center;
  background-color: #f4f5f7;
  font-size: 28rpx;
}

