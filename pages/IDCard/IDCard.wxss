/* 信息输入区域 */
.inputMessageModule {
  width: 100%;
  padding: 0 4%;
  /* padding-bottom: 100rpx; */
  height: 80rpx;
  background:rgba(249,249,249,1);
  border-bottom: 2rpx solid rgba(229,229,229,1);
}

.messageContent input{
  width: 70%;
  text-align: left;
  float: left;
  /* padding-left: 50rpx; */
  line-height: 80rpx;
  height: 80rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}

.annotation{
  width: 750rpx;
  padding-top: 100rpx;
  padding-bottom: 30rpx;
  font-size: 22rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);                    
}

.annotation .annotation-word{
  /* width: 588rpx; */
  width: 600rpx;
  margin: 0 auto;
  margin-left: 48rpx;
}

/* 提交按钮 */
.idCardMessageButtonModule {
  width: 100%;
  text-align: center;
  margin-top: 60rpx;
  background-color: #EC9300;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}

.idCardMessageButtonModule2 {
  width: 100%;
  text-align: center;
  margin-top: 60rpx;
  background-color: #b4b4b3;
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
}

/* 限制弹窗 */
.limitModule {
  height: 250rpx;
  width: 500rpx;
  background-color: #ffffff;
  z-index: 9999;
  position:fixed;
  left: 17%;
  top: 30%;
  /* -webkit-box-shadow: #353535 0px 0px 10px; 
  -moz-box-shadow: #353535 0px 0px 10px;  */
  box-shadow:0px -2rpx 8rpx 0px rgba(41,41,41,0.4);
border-radius:8rpx 8rpx 8rpx 8rpx;
}

.limitText {
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  line-height: 150rpx;
}

.limitButton {
  width: 100%;
  background-color: #EC9300;
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 0; 
  box-shadow:0px 2rpx 7rpx 0px rgba(41,41,41,0.49);
border-radius:0px 0px 8rpx 8rpx;
}
.messageName {
  width: 30%;
  text-align: left;
  float: left;
  
  line-height: 80rpx;
  height: 80rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
